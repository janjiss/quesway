<% title @survey.name %>
<ul id="right_menu">
  <li>
  <%= link_to("Survey results", 
    {:controller => "questions",
    :action => "index",
    :survey_id => @survey.id},
    :class=> "results"
  )%>
  </li>
  <li>
  <%= link_to("Add question", 
    {:controller => "questions",
    :action => "new",
    :survey_id => @survey.id},
    :class=> "add"
  )%>
  </li>
  <li>
  <%= link_to("Edit or publish survey",
    edit_survey_path(@survey), 
    :class => "edit"
  )%>
  </li>
  <li>
  <%= link_to("Delete survey", 
    @survey, 
    :confirm => 'Are you shure, you want to delete this survey?',
    :method => :delete,
    :class=>"destroy"
  )%>
  </li>
</ul>
<div id="content_wrapper">
<% if @survey.questions.count == 0 %>
  <p>There are no questions added yet</p>
<% else %>
  <% for question in @survey.questions %>
    <div class="element_wrapper">
      <h3><%= question.body %></h3> 
      <%=link_to("Edit question",
        {:controller => "questions",
        :action => "edit",
        :id => question.id,
        :survey_id => @survey.id},
        :class=> "action_link"
      )%>
    </div>
  <% end %>
<% end %>
</div>

