<% title "Edit or publish the survey" %>
<ul id="right_menu">
  <li><%= link_to "Back to survey", survey_path(@survey), :class=> "back" %></li>
</ul>
<%= form_for @survey do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name, "Survey name" %><br />
    <%= f.text_field :name %>
  </p>
  <div class="warning">
    <h3>Warning</h3>
    <p>If you publish the survey, you won't be able to edit the questions!</p>
    <%= f.label :published, "Click here, to publish the survey." %>
    <%= f.check_box :published %>
  </div>
  <p><%= f.submit "Submit survey" %></p>
<% end %>
