<%= form_for @answer, :url => {:action => "create",:survey_id => params[:survey_id]} do |f| %>
  <%= f.error_messages %>
  <%= f.text_field :question_id, :type => :hidden, :value => @question.id %>
  <% if @question.choices_answer? %>
    <%= f.label :answer, "Please choose the answer" %><br />
    <%= f.select :answer, choice_array_from_string(@question) %>
  <% elsif @question.number_answer? %>
    <%= f.label :answer, "Please fill in number:" %><br />
    <%= f.text_field :answer %>
  <% else %>
    <%= f.label :answer, "Please fill your answer:" %><br />
    <%= f.text_field :answer %>
  <% end %>

<%= f.submit :value => "Answer", :class => "answer" %>
<% end %>
